<% provide(:title, '基本情報の更新') %>
<h1>基本情報の更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(current_user, :url => {:controller => :users, :action => :update_basic_info}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :指定勤務時間 %>
      <%= f.time_field :specified_work_time,{class: 'form-control'} %>

      <%= f.label :基本勤務時間 %>
      <%= f.time_field :basic_work_time,{class: 'form-control'} %>

      <%= f.submit "変更の保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>